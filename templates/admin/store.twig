{% extends 'base.twig' %}

{% block body %}
    <main class="main">
        <div class="main__block_one __container">
            <table style="margin: 0 auto; font-size: 25px">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                </tr>
                {% for post in posts %}
                <tr>
                    <td><a href="/{{ post.id }}">{{ post.id }}</a></td>
                    <td>{{ post.title }}</td>
                    <td><a href="/admin/destroy/{{ post.id }}">&#9746;</a></td>
                    <td><a href="/admin/{{ post.id }}/edit">&#9998;</a></td>
                </tr>
                {% endfor %}
            </table>
            <div style="text-align: center; margin-top: 20px; font-size: 20px">
                <a href="/admin/create">Добавить</a>
            </div>
        </div>
    </main>
{% endblock %}